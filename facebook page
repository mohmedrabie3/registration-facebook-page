<script>
	document.querySelector('.log').addEventListener('click',login )
function login(){
	var fi = document.querySelector('.F').value
	var Pi = document.querySelector('.P').values
	if  (fi.length != 0 && Pi.length != 0){
		alert("")
	}
	else { 
	alert("Please fill in the Email and password")
		
	}
}
document.querySelector('.up').addEventListener('click',signup)
function signup(){
var zz = document.querySelector('.z').value ; 
var xx = document.querySelector('.x').value ;
var yy =  document.querySelector('.y').value ;
var vv = document.querySelector('.v').value ;
if  (zz.length == 0 ) {
alert ("Error in Fisrt Name ")}
else if (xx.length == 0){
alert ('Error in Lastname')}
else  if ( yy.length > 10 ||  yy.length < 5  ) {
alert ("Error in Password")
}
else if (vv.length == 0){
alert("Error in Your Mail")
}
else  {
alert("successfully registered")}
}

</script>
